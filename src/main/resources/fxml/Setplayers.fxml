                <Label layoutX="330.0" layoutY="166.0" text="Player 1:" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="15.0" />
                    </font>
                </Label>
                <Label layoutX="330.0" layoutY="242.0" text="Player 2:" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="15.0" />
                    </font>
                </Label>
                <TextField fx:id="player1" layoutX="286.0" layoutY="196.0" style="-fx-background-radius: 10;" />
                <TextField fx:id="player2" layoutX="287.0" layoutY="270.0" style="-fx-background-radius: 10;" />
